<Window x:Class="WpfPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Person.Name, StringFormat= Welcome {0}} "/>
            <TextBox Text="{Binding Person.Name, Mode=OneWayToSource}" Width="200" Height="20" Margin= "0, 20, 0, 0"/>
            <Button Height="20" Width="200" Margin="10" Content="Button 1"/>
            <Button Height="20" Width="200" Content="Button 2"/>
        </StackPanel>
    </Grid>
</Window>
